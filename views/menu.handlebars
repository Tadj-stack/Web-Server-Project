<section>
    <h2>Menu</h2>

    <ul class="menu">
        {{#each produit}}
            <li data-id-produit="{{this.id_produit}}" data-user="{{user}}">
                <div class="nom">{{this.nom}}</div>
                <div class="prix">{{this.prix}} $</div>
                <img src="{{this.chemin_image}}" alt="{{this.nom}}">
                {{#if ../user}}
                    <input type="button" value="Ajouter au panier">
                {{/if}}
            </li>
        {{/each}}
    </ul>
</section>

<script type="module" src="./js/menu.js"></script>

